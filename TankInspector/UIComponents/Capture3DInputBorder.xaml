<UserControl x:Class="Smellyriver.TankInspector.UIComponents.Capture3DInputBorder"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"      
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300" Loaded="UserControl_Loaded" Unloaded="UserControl_Unloaded">
    <Grid>
        <Border Name="captureBorder" Background="Transparent" MouseDown="captureBorder_MouseDown" MouseUp="captureBorder_MouseUp" MouseMove="captureBorder_MouseMove" MouseWheel="captureBorder_MouseWheel"/>
    </Grid>
</UserControl>
