                                                        <Button.ToolTip>
                                                            <ToolTip x:Uid="SelectAsReferenceButtonToolTip">Select as reference tank</ToolTip>
                                                        </Button.ToolTip>
                                                    </Button>
                                                </Grid>
                                                <Button.ToolTip>
                                                    <ToolTip>
                                                        <Grid>
                                                            <TextBlock Visibility="{Binding Owner.IsSearchingForReferenceTank, Converter={StaticResource BoolToCollapsedVisibleConverter}}" x:Uid="SearchResultItemToolTip1">Select this tank</TextBlock>
                                                            <TextBlock Visibility="{Binding Owner.IsSearchingForReferenceTank, Converter={StaticResource BoolToVisibleCollapsedConverter}}" x:Uid="SearchResultItemToolTip2">Select as reference tank</TextBlock>
                                                        </Grid>
                                                    </ToolTip>
                                                </Button.ToolTip>
                                            </Button>
                                        </Grid>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </ControlTemplate.Resources>
                    <Grid>
                        <ItemsPresenter />
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>






