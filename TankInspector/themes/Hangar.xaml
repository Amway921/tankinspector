<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:ui="clr-namespace:Smellyriver.TankInspector.UIComponents"
                    xmlns:design="clr-namespace:Smellyriver.TankInspector.Design"
                    xmlns:system="clr-namespace:System;assembly=mscorlib"
                    xmlns:effects="clr-namespace:Smellyriver.Wpf.Effects;assembly=Smellyriver.Wpf"
                    xmlns:smellyriver="clr-namespace:Smellyriver;assembly=Smellyriver.Common"
                    xmlns:wpf="clr-namespace:Smellyriver.Wpf;assembly=Smellyriver.Wpf"
                    xmlns:anim="clr-namespace:Smellyriver.Wpf.Animation;assembly=Smellyriver.Wpf"
                    xmlns:util="clr-namespace:Smellyriver.Wpf.Utilities;assembly=Smellyriver.Wpf">

    <design:NationalFlagConverter x:Key="LargeBlurredFlagConverter" Type="LargeBlurred" />
    <design:TankClassIconConverter x:Key="TankClassIconConverter" Type="Auto" />
    <design:TankIconConverter x:Key="TankIconConverter" Type="Normal" />
    <design:TankIconConverter x:Key="TankSmallIconConverter" Type="Small" />
    <design:TankIconConverter x:Key="TankContourIconConverter" Type="Contour" />
    <design:TankTierIconConverter x:Key="TankTierIconConverter" Type="Heavy" />
    <design:TankTierIconConverter x:Key="LightTankTierIconConverter" Type="Light" />
    <design:TankClassNameConverter x:Key="TankClassNameConverter" Type="Auto" />
    <design:ShellIconConverter x:Key="ShellIconConverter" />
    <design:ReversedEnumerableConverter x:Key="ReversedEnumerableConverter" />
    <design:GuiImageConverter x:Key="GUIImageConverter" />
    <design:CrewRoleIconConverter x:Key="CrewRoleIconConverter" Type="Big" />
    <design:CrewRoleIconConverter x:Key="CrewSmallRoleIconConverter" Type="Small" />
    <design:CrewRankIconConverter x:Key="CrewSmallRankIconConverter" Type="Small" />
    <design:CrewRankIconConverter x:Key="CrewRankIconConverter" Type="Big" />

    <ResourceDictionary x:Key="EquipmentIconDataTemplates">
        <DataTemplate DataType="{x:Type ui:GunViewModel}">
            <Image Source="pack://application:,,,/Smellyriver.TankInspector;component/Resources/Images/GameElements/Gun.png" Stretch="None" />
        </DataTemplate>
        <DataTemplate DataType="{x:Type ui:TurretViewModel}">
            <Image Source="pack://application:,,,/Smellyriver.TankInspector;component/Resources/Images/GameElements/Turret.png" Stretch="None" />
        </DataTemplate>
        <DataTemplate DataType="{x:Type ui:EngineViewModel}">
            <Image Source="pack://application:,,,/Smellyriver.TankInspector;component/Resources/Images/GameElements/Engine.png" Stretch="None" />
        </DataTemplate>
        <DataTemplate DataType="{x:Type ui:ChassisViewModel}">
            <Image Source="pack://application:,,,/Smellyriver.TankInspector;component/Resources/Images/GameElements/Chassis.png" Stretch="None" />
        </DataTemplate>
        <DataTemplate DataType="{x:Type ui:RadioViewModel}">
            <Image Source="pack://application:,,,/Smellyriver.TankInspector;component/Resources/Images/GameElements/Radio.png" Stretch="None" />
        </DataTemplate>
        <DataTemplate DataType="{x:Type ui:ShellViewModel}">
            <Image Source="{Binding Shell, Converter={StaticResource ShellIconConverter}}" Stretch="None" />
        </DataTemplate>
        <DataTemplate DataType="{x:Type ui:AccessoryViewModelBase}">
            <Image Source="{Binding Converter={StaticResource GUIImageConverter}, ConverterParameter=Icon}" Stretch="None" />
        </DataTemplate>
    </ResourceDictionary>

    <Style TargetType="Button" x:Key="QuickConfigButton" BasedOn="{StaticResource ContentButton}">
        <Setter Property="HorizontalAlignment" Value="Left" />
        <Setter Property="Margin" Value="-45,4,0,0" />
        <Setter Property="Cursor" Value="{x:Static ui:Cursors.Hand}" />
        <Setter Property="anim:ShowHideAnimation.ShowStoryboard">
            <Setter.Value>
                <Storyboard>
                    <ThicknessAnimation Storyboard.TargetProperty="Margin" From="0,4,0,0" To="-45,4,0,0" Duration="0:0:0.2" />
                    <DoubleAnimation Storyboard.TargetProperty="Opacity" From="0" To="1" Duration="0:0:0.2" />
                </Storyboard>
            </Setter.Value>
        </Setter>
        <Setter Property="anim:ShowHideAnimation.HideStoryboard">
            <Setter.Value>
                <Storyboard>
                    <ThicknessAnimation Storyboard.TargetProperty="Margin" From="-45,4,0,0" To="0,4,0,0" Duration="0:0:0.2" FillBehavior="Stop" />
                    <DoubleAnimation Storyboard.TargetProperty="Opacity" From="1" To="0" Duration="0:0:0.2" />
                </Storyboard>
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="Button" x:Key="SmallQuickConfigButton" BasedOn="{StaticResource ContentButton}">
        <Setter Property="HorizontalAlignment" Value="Left" />
        <Setter Property="Margin" Value="-32,3,0,0" />
        <Setter Property="Cursor" Value="{x:Static ui:Cursors.Hand}" />
        <Setter Property="anim:ShowHideAnimation.ShowStoryboard">
            <Setter.Value>
                <Storyboard>
                    <ThicknessAnimation Storyboard.TargetProperty="Margin" From="0,3,0,0" To="-32,3,0,0" Duration="0:0:0.2" />
                    <DoubleAnimation Storyboard.TargetProperty="Opacity" From="0" To="1" Duration="0:0:0.2" />
                </Storyboard>
            </Setter.Value>
        </Setter>
        <Setter Property="anim:ShowHideAnimation.HideStoryboard">
            <Setter.Value>
                <Storyboard>
                    <ThicknessAnimation Storyboard.TargetProperty="Margin" From="-32,3,0,0" To="0,3,0,0" Duration="0:0:0.2" FillBehavior="Stop" />
                    <DoubleAnimation Storyboard.TargetProperty="Opacity" From="1" To="0" Duration="0:0:0.2" />
                </Storyboard>
            </Setter.Value>
        </Setter>
    </Style>


    <Style TargetType="ToolTip" x:Key="ModuleToolTip" BasedOn="{StaticResource BorderlessToolTip}">
        <Style.Resources>
            <system:Double x:Key="TipWidth">400</system:Double>
        </Style.Resources>
        <Setter Property="DataContext" Value="{Binding PlacementTarget.DataContext, RelativeSource={RelativeSource Self}}" />
        <Setter Property="Placement" Value="Top" />
        <Setter Property="HasDropShadow" Value="True" />
        <Setter Property="HorizontalOffset" Value="-169" />
        <Setter Property="Width" Value="{StaticResource TipWidth}" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ToolTip">
                    <Grid>
                        <DockPanel LastChildFill="True">
                            <Image Source="pack://application:,,,/Smellyriver.TankInspector;component/Resources/Images/UIElements/ModulePopupHeader.png" Stretch="None" DockPanel.Dock="Top" />
                            <Image Source="pack://application:,,,/Smellyriver.TankInspector;component/Resources/Images/UIElements/ModulePopupFooter.png" Stretch="None" DockPanel.Dock="Bottom" />
                            <Grid>
                                <Grid.Background>
                                    <ImageBrush ImageSource="pack://application:,,,/Smellyriver.TankInspector;component/Resources/Images/UIElements/ModulePopupFill.png" Stretch="Fill" />
                                </Grid.Background>
                                <ContentPresenter Margin="59,0" />
                            </Grid>
                        </DockPanel>

                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>


    <system:Double x:Key="ServiceMenuTopLevelHeaderWidth">60</system:Double>
    <system:Double x:Key="ServiceMenuTopLevelHeaderHeight">60</system:Double>
    <system:Double x:Key="ServiceMenuTopLevelItemWidth">284</system:Double>
    <system:Double x:Key="ServiceMenuTopLevelItemHeight">84</system:Double>

    <Style TargetType="MenuItem" x:Key="ServiceMenuTopLevelItemBase">
        <Setter Property="Cursor" Value="{x:Static ui:Cursors.Hand}" />
        <Setter Property="Command" Value="{Binding EquipCommand}" />
        <Setter Property="ItemsSource" Value="{x:Null}" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type MenuItem}">
                    <Grid HorizontalAlignment="Center">
                        <Image Margin="-5,-2,-5,-8" Source="pack://application:,,,/Smellyriver.TankInspector;component/Resources/Images/UIElements/ModulePopupItemBackground.png" Stretch="None" />
                        <Image Margin="-5,-2,-5,-8" x:Name="Mask" Source="pack://application:,,,/Smellyriver.TankInspector;component/Resources/Images/UIElements/ModulePopupItemMask.png" Stretch="None" Opacity="0" />
                        <ContentPresenter ContentSource="Header"/>
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsHighlighted" Value="true">
                            <Trigger.EnterActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="Mask" Storyboard.TargetProperty="Opacity" To="1" Duration="0:0:0.2" />
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.EnterActions>
                            <Trigger.ExitActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="Mask" Storyboard.TargetProperty="Opacity" To="0" Duration="0:0:0.2" FillBehavior="Stop" />
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.ExitActions>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="MenuItem" x:Key="ServiceMenuTopLevelItem" BasedOn="{StaticResource ServiceMenuTopLevelItemBase}">
        <Setter Property="Command" Value="{Binding EquipCommand}" />
        <Setter Property="HeaderTemplate">
            <Setter.Value>
                <DataTemplate>
                    <Grid>
                        <Grid HorizontalAlignment="Left" VerticalAlignment="Center" Width="60" Height="60" Margin="5,0,0,0">
                            <Image Source="pack://application:,,,/Smellyriver.TankInspector;component/Resources/Images/UIElements/ModuleSlot.png" Stretch="None" />
                            <ContentControl Content="{Binding}" Resources="{StaticResource EquipmentIconDataTemplates}" />
                            <Image x:Name="TierLabel" Source="{Binding Tier, Converter={StaticResource LightTankTierIconConverter}}" Stretch="None" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="3" />
                            <Image Source="pack://application:,,,/Smellyriver.TankInspector;component/Resources/Images/UIElements/TopConfigRibbon.png" Visibility="{Binding IsElite, Converter={StaticResource BoolToVisibleCollapsedConverter}}" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="-3" Stretch="None" />
                            <Image Source="pack://application:,,,/Smellyriver.TankInspector;component/Resources/Images/UIElements/InsufficientLoadCapacityIcon.png" Stretch="None" Margin="0,0,-2,4"
                                                   HorizontalAlignment="Right" VerticalAlignment="Bottom" Visibility="{Binding IsLoadCapable,Converter={StaticResource BoolToCollapsedVisibleConverter}}"/>

                            <ContentControl Content="{Binding}">
                                <ContentControl.Resources>
                                    <DataTemplate DataType="{x:Type ui:GunViewModel}">
                                        <Image Source="pack://application:,,,/Smellyriver.TankInspector;component/Resources/Images/GameElements/MagazineGunIcon.png" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="4,6" Stretch="None"
                                                               Visibility="{Binding IsMagazineGun, Converter={StaticResource BoolToVisibleCollapsedConverter}}"/>
                                    </DataTemplate>
                                    <DataTemplate DataType="{x:Type smellyriver:NotificationObject}">
                                        <Grid />
                                    </DataTemplate>
                                    <DataTemplate DataType="{x:Type wpf:DependencyNotificationObject}">
                                        <Grid />
                                    </DataTemplate>
                                </ContentControl.Resources>
                            </ContentControl>
                        </Grid>

                        <Viewbox StretchDirection="DownOnly" Margin="71,13,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Width="200">
                            <TextBlock Text="{Binding Name}" FontSize="16" FontWeight="Bold" />
                        </Viewbox>
                        <Viewbox StretchDirection="DownOnly" Margin="71,33,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Width="200" Height="50" Stretch="Fill">
                            <TextBlock Text="{Binding Description}" FontFamily="{StaticResource CondensedFont}" Opacity="0.7" Width="200" HorizontalAlignment="Left" VerticalAlignment="Top" TextWrapping="Wrap"/>
                        </Viewbox>
                        <Image Source="pack://application:,,,/Smellyriver.TankInspector;component/Resources/Images/UIElements/PopupEquippedIcon.png" Stretch="None" HorizontalAlignment="Right" Margin="10"
                                               Visibility="{Binding IsEquipped, Converter={StaticResource BoolToVisibleCollapsedConverter}}" />
                    </Grid>
                </DataTemplate>
            </Setter.Value>
        </Setter>
        <Setter Property="ToolTip">
            <Setter.Value>
                <ToolTip>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock x:Uid="ElementMenuItemToolTip1">Click to equip</TextBlock>
                        <TextBlock x:Uid="ElementMenuItemToolTip2" Visibility="{Binding IsPreviewing, Converter={StaticResource BoolToVisibleCollapsedConverter}}">, hold right mouse button to temporarily hide this menu</TextBlock>
                    </StackPanel>
                </ToolTip>
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="Separator" x:Key="ServiceMenuSeparator">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate>
                    <Image Source="pack://application:,,,/Smellyriver.TankInspector;component/Resources/Images/UIElements/ModuleBarSepartor.png" Stretch="None" />
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="MenuItem" x:Key="ServiceMenuTopLevelHeaderItem">
        <Setter Property="Cursor" Value="{x:Static ui:Cursors.Hand}" />
        <Setter Property="OverridesDefaultStyle" Value="True"/>
        <Setter Property="ItemsSource"  Value="{Binding Replacements, Converter={StaticResource ReversedEnumerableConverter}}" />
        <Setter Property="ToolTip">
            <Setter.Value>
                <ToolTip Style="{StaticResource ModuleToolTip}">
                    <ContentControl Content="{Binding}">
                        <ContentControl.Resources>
                            <DataTemplate DataType="{x:Type ui:GunViewModel}">
                                <ui:GunView DataContext="{Binding}" />
                            </DataTemplate>
                            <DataTemplate DataType="{x:Type ui:TurretViewModel}">
                                <ui:TurretView DataContext="{Binding}" />
                            </DataTemplate>
                            <DataTemplate DataType="{x:Type ui:EngineViewModel}">
                                <ui:EngineView DataContext="{Binding}" />
                            </DataTemplate>
                            <DataTemplate DataType="{x:Type ui:ChassisViewModel}">
                                <ui:ChassisView DataContext="{Binding}" />
                            </DataTemplate>
                            <DataTemplate DataType="{x:Type ui:RadioViewModel}">
                                <ui:RadioView DataContext="{Binding}" />
                            </DataTemplate>
                            <DataTemplate DataType="{x:Type ui:ShellViewModel}">
                                <ui:ShellView DataContext="{Binding}" />
                            </DataTemplate>
                            <DataTemplate DataType="{x:Type ui:AccessoryViewModelBase}">
                                <ui:AccessoryView DataContext="{Binding}" />
                            </DataTemplate>
                        </ContentControl.Resources>
                    </ContentControl>
                </ToolTip>
            </Setter.Value>
        </Setter>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="MenuItem">

                    <Grid Width="{StaticResource ServiceMenuTopLevelHeaderWidth}" Height="{StaticResource ServiceMenuTopLevelHeaderHeight}">
                        <Grid>
                            <Image Source="pack://application:,,,/Smellyriver.TankInspector;component/Resources/Images/UIElements/ModuleSlot.png" />
                            <ContentControl Content="{Binding}" Resources="{StaticResource EquipmentIconDataTemplates}" />
                            <Image x:Name="TierLabel" Source="{Binding Tier, Converter={StaticResource LightTankTierIconConverter}}" Stretch="None" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="3" />
                            <Image Source="pack://application:,,,/Smellyriver.TankInspector;component/Resources/Images/UIElements/TopConfigRibbon.png" Visibility="{Binding IsElite, Converter={StaticResource BoolToVisibleCollapsedConverter}}" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="-3" Stretch="None" />
                            <ContentPresenter ContentSource="Header"/>

                            <ContentControl Content="{Binding}">
                                <ContentControl.Resources>
                                    <DataTemplate DataType="{x:Type ui:GunViewModel}">
                                        <Image Source="pack://application:,,,/Smellyriver.TankInspector;component/Resources/Images/GameElements/MagazineGunIcon.png" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="4,6" Stretch="None"
                                                               Visibility="{Binding IsMagazineGun, Converter={StaticResource BoolToVisibleCollapsedConverter}}"/>
                                    </DataTemplate>
                                    <DataTemplate DataType="{x:Type smellyriver:NotificationObject}">
                                        <Grid />
                                    </DataTemplate>
                                    <DataTemplate DataType="{x:Type wpf:DependencyNotificationObject}">
                                        <Grid />
                                    </DataTemplate>
                                </ContentControl.Resources>
                            </ContentControl>

                            <Grid.Effect>
                                <design:ContentButtonBrightnessEffect x:Name="BrightnessEffect" Brightness="0.0" 
                                                                HighlightBrightness="{TemplateBinding Property=design:ContentButtonStyle.HighlightBrightness}" 
                                                                ShadowBrightness="{TemplateBinding Property=design:ContentButtonStyle.ShadowBrightness}" />
                            </Grid.Effect>
                        </Grid>
                        <Popup Name="Popup" Placement="Top " HorizontalOffset="-169" IsOpen="{TemplateBinding IsSubmenuOpen}" AllowsTransparency="True" Focusable="False" PopupAnimation="Fade"
                               OverridesDefaultStyle="True" Width="400">
                            <DockPanel LastChildFill="True" Width="400">
                                <Image Source="pack://application:,,,/Smellyriver.TankInspector;component/Resources/Images/UIElements/ModulePopupHeader.png" Stretch="None" DockPanel.Dock="Top" />
                                <Image Source="pack://application:,,,/Smellyriver.TankInspector;component/Resources/Images/UIElements/ModulePopupFooter.png" Stretch="None" DockPanel.Dock="Bottom" />

                                <Grid>
                                    <Grid.Background>
                                        <ImageBrush ImageSource="pack://application:,,,/Smellyriver.TankInspector;component/Resources/Images/UIElements/ModulePopupFill.png" Stretch="Fill" />
                                    </Grid.Background>

                                    <ui:DragScrollViewer util:ScrollViewerHelper.ScrollToBottom="True" HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Hidden" Margin="59,0">
                                        <StackPanel IsItemsHost="True" />
                                    </ui:DragScrollViewer>
                                </Grid>

                            </DockPanel>
                        </Popup>
                    </Grid>

                    <ControlTemplate.Triggers>
                        <DataTrigger Binding="{Binding Tier}" Value="-1">
                            <Setter TargetName="TierLabel" Property="Visibility" Value="Hidden" />
                        </DataTrigger>
                        <Trigger Property="IsSuspendingPopupAnimation" Value="true">
                            <Setter TargetName="Popup" Property="PopupAnimation" Value="None"/>
                        </Trigger>
                        <Trigger Property="IsHighlighted" Value="true">
                            <Trigger.EnterActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="BrightnessEffect" Storyboard.TargetProperty="Progress" To="1.0" Duration="0:0:0.2" />
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.EnterActions>
                            <Trigger.ExitActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="BrightnessEffect" Storyboard.TargetProperty="Progress" To="0" Duration="0:0:0.2" FillBehavior="Stop" />
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.ExitActions>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="true">
                            <Trigger.EnterActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="BrightnessEffect" Storyboard.TargetProperty="Progress" To="-0.7" Duration="0:0:0.2" />
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.EnterActions>
                            <Trigger.ExitActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="BrightnessEffect" Storyboard.TargetProperty="Progress" To="0" Duration="0:0:0.2" FillBehavior="Stop" />
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.ExitActions>
                        </Trigger>
                        <Trigger Property="IsSubmenuOpen" Value="true">
                            <Trigger.EnterActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="BrightnessEffect" Storyboard.TargetProperty="Progress" To="-0.5" Duration="0:0:0.2" />
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.EnterActions>
                            <Trigger.ExitActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="BrightnessEffect" Storyboard.TargetProperty="Progress" To="0" Duration="0:0:0.2" FillBehavior="Stop" />
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.ExitActions>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>

        <Setter Property="ItemContainerStyle" Value="{StaticResource ServiceMenuTopLevelItem}" />
    </Style>




    <Style TargetType="MenuItem" x:Key="ServiceMenuSecondLevelCrewItemBase" BasedOn="{StaticResource ServiceMenuTopLevelItemBase}">
        <Setter Property="Command" Value="{Binding ToggleCommand}" />
        <Setter Property="ItemsSource" Value="{x:Null}" />
        <Setter Property="StaysOpenOnClick" Value="True" />
        <Setter Property="HeaderTemplate">
            <Setter.Value>
                <DataTemplate>
                    <Grid>
                        <Grid HorizontalAlignment="Left" VerticalAlignment="Center" Width="60" Height="60" Margin="5,0,0,0">
                            <Image Source="pack://application:,,,/Smellyriver.TankInspector;component/Resources/Images/UIElements/SkillSlot.png" Stretch="None" />
                            <Image Source="{Binding Converter={StaticResource GUIImageConverter}, ConverterParameter=BigIcon}" Stretch="None">
                                <Image.Style>
                                    <Style TargetType="Image">
                                        <Setter Property="Opacity" Value="0.2" />
                                        <Setter Property="Effect">
                                            <Setter.Value>
                                                <effects:GrayscaleEffect DesaturationFactor="0" />
                                            </Setter.Value>
                                        </Setter>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsLearnt}" Value="True">
                                                <DataTrigger.EnterActions>
                                                    <BeginStoryboard>
                                                        <Storyboard>
                                                            <DoubleAnimation Storyboard.TargetProperty="(Image.Effect).(effects:GrayscaleEffect.DesaturationFactor)" To="1" Duration="0:0:0.2" />
                                                            <DoubleAnimation Storyboard.TargetProperty="Opacity" To="1" Duration="0:0:0.2" />
                                                        </Storyboard>
                                                    </BeginStoryboard>
                                                </DataTrigger.EnterActions>
                                                <DataTrigger.ExitActions>
                                                    <BeginStoryboard>
                                                        <Storyboard>
                                                            <DoubleAnimation Storyboard.TargetProperty="(Image.Effect).(effects:GrayscaleEffect.DesaturationFactor)" To="0" Duration="0:0:0.2" FillBehavior="Stop" />
                                                            <DoubleAnimation Storyboard.TargetProperty="Opacity" To="0.2" Duration="0:0:0.2" FillBehavior="Stop"/>
                                                        </Storyboard>
                                                    </BeginStoryboard>
                                                </DataTrigger.ExitActions>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Image.Style>
                            </Image>
                        </Grid>

                        <Viewbox StretchDirection="DownOnly" Margin="71,13,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Width="200">
                            <TextBlock Text="{Binding CrewSkill.Name}" FontSize="16" FontWeight="Bold" />
                        </Viewbox>
                        <Viewbox StretchDirection="DownOnly" Margin="71,33,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Width="200" Height="50" Stretch="Fill">
                            <TextBlock Text="{Binding CrewSkill.ShortDescription}" FontFamily="{StaticResource CondensedFont}" Opacity="0.7" Width="200" HorizontalAlignment="Left" VerticalAlignment="Top" TextWrapping="Wrap"/>
                        </Viewbox>
                        
                        <Image Source="pack://application:,,,/Smellyriver.TankInspector;component/Resources/Images/UIElements/PopupEquippedIcon.png" Stretch="None" HorizontalAlignment="Right" Margin="10"
                               Visibility="{Binding IsLearnt, Converter={StaticResource BoolToVisibleCollapsedConverter}}" />
                    </Grid>
                </DataTemplate>
            </Setter.Value>
        </Setter>
        <Setter Property="ToolTip">
            <Setter.Value>
                <ToolTip>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock x:Uid="CrewElementMenuItemToolTip1">Click to learn or forget</TextBlock>
                        <TextBlock x:Uid="CrewElementMenuItemToolTip2" Visibility="{Binding IsPreviewing, Converter={StaticResource BoolToVisibleCollapsedConverter}}">, hold right mouse button to temporarily hide this menu</TextBlock>
                    </StackPanel>
                </ToolTip>
            </Setter.Value>
        </Setter>
    </Style>


    <Style TargetType="MenuItem" x:Key="ServiceMenuTopLevelCrewItemBase">
        <Setter Property="Cursor" Value="{x:Static ui:Cursors.Hand}" />
        <Setter Property="OverridesDefaultStyle" Value="True"/>
        <Setter Property="ItemsSource" Value="{Binding AvailableSkills.Values}" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="MenuItem">

                    <Grid Width="{StaticResource ServiceMenuTopLevelHeaderWidth}" Height="{StaticResource ServiceMenuTopLevelHeaderHeight}">
                        <Grid>
                            <Image Source="pack://application:,,,/Smellyriver.TankInspector;component/Resources/Images/UIElements/CrewSlot.png" />
                            <Image Source="{Binding Crew.PrimaryRole, Converter={StaticResource CrewRoleIconConverter}}" Stretch="None" />
                            <Image Width="45" Height="34" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="27,31,0,0">
                                <Image.Source>
                                    <MultiBinding Converter="{StaticResource CrewSmallRankIconConverter}">
                                        <MultiBinding.Bindings>
                                            <Binding Path="NationKey" />
                                            <Binding Path="RankLevel" />
                                        </MultiBinding.Bindings>
                                    </MultiBinding>
                                </Image.Source>
                            </Image>


                            <Grid.Effect>
                                <design:ContentButtonBrightnessEffect x:Name="BrightnessEffect" Brightness="0.0" 
                                                                HighlightBrightness="{TemplateBinding Property=design:ContentButtonStyle.HighlightBrightness}" 
                                                                ShadowBrightness="{TemplateBinding Property=design:ContentButtonStyle.ShadowBrightness}" />
                            </Grid.Effect>
                        </Grid>

                        <Popup Name="Popup" Placement="Top " HorizontalOffset="-169" VerticalOffset="5" IsOpen="{TemplateBinding IsSubmenuOpen}" AllowsTransparency="True" Focusable="False" PopupAnimation="Fade"
                               OverridesDefaultStyle="True" Width="400">
                            <DockPanel LastChildFill="True">
                                <Image Source="pack://application:,,,/Smellyriver.TankInspector;component/Resources/Images/UIElements/ModulePopupHeader.png" Stretch="None" DockPanel.Dock="Top" />
                                <Image Source="pack://application:,,,/Smellyriver.TankInspector;component/Resources/Images/UIElements/ModulePopupFooter.png" Stretch="None" DockPanel.Dock="Bottom" />
                                <Grid>
                                    <Grid.Background>
